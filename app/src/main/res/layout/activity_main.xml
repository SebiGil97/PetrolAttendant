<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:paddingBottom="@dimen/activity_vertical_margin"
                tools:context=".Activity.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <ImageButton
            android:id="@+id/activity_main_imageButton_delete"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="100dp"
            android:layout_height="80dp"
            android:src="@drawable/petrolattendent_icon_trash_black_dp50"
            android:visibility="gone" />

        <ListView
            android:id="@+id/activity_main_list"
            android:layout_width="match_parent"
            android:layout_height="479dp"
            android:longClickable="true"
            android:visibility="visible">

        </ListView>

        <ImageButton
            android:id="@+id/activity_main_imageButton_addCar"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/petrolattendent_icon_plus_black_dp50" />

    </LinearLayout>

</FrameLayout>
